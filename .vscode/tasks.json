{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "node",
    "tasks": [
        {
            "label": "run",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "type": "shell",
            "args": [
                "${fileBasenameNoExtension}.js",
                "${fileBasenameNoExtension}.k"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "convert to DAT",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "type": "shell",
            "args": [
                "${env:KNITOUT_BACKEND_SWG}/knitout-to-dat.js",
                "${fileBasenameNoExtension}.k",
                "${fileBasenameNoExtension}.dat"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "DAT to PNG",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "type": "shell",
            "args": [
                "dat2png.js",
                "${fileBasenameNoExtension}.dat"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "rebuild all",
            "dependsOn": [
                "run",
                "convert to DAT",
                "DAT to PNG"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}