{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "node",
    "tasks": [
        {
            "label": "run",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "type": "shell",
            "args": [
                "${fileBasenameNoExtension}.js",
                "${fileBasenameNoExtension}.k"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}